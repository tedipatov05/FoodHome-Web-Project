@using FoodHome.Infrastructure.Data.Entities;
@using Microsoft.AspNetCore.Identity
@using FoodHome.Common
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole(RoleConstants.Customer))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Cart" asp-controller="Dish">
                <i class="fa fa-shopping-cart fa-lg"></i>
            </a>
        </li>
    }
   
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-action="MyProfile" asp-controller="Profile" >Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>
