@using FoodHome.Core.Models;
@model LoginViewModel;

@{
    ViewData["Title"] = "Log in";
}

<div class="register-photo">
    <div class="form-container">
        <div class="image-container">
            <div class="image-holder"></div>

            <form id="loginForm" method="post">
                <h2 class="text-center"><strong>@ViewData["Title"]</strong> your account.</h2>
                <div asp-validation-summary="ModelOnly" class="text-white"></div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email">
                    <span asp-validation-for="Email" class="text-white"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password" class="text-white"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Login</button>
                </div>
                <br>
                <a asp-controller="Account" asp-action="Register" class="already text-light">Don't have an account? <b class="text-light">Click here.</b></a>
            </form>
        </div></>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}