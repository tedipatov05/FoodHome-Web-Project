@using FoodHome.Core.Models.Restaurant;
@model List<RestaurantViewModel>

@{
    ViewData["Title"] = "All Restaurants";
}
<h1 class="text-black text-center">@ViewData["Title"]</h1>




<div class="container">
    @foreach (var restaurnt in Model)
    {
        <a class="text-black" asp-action="Details" asp-controller="Restaurant" asp-route-id="@restaurnt.Id">
            <div class="card mb-3" style="max-width: 540px;">

                <div class="row g-0">

                    <div class="col-md-4">
                        <img src="@restaurnt.PictureUrl" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@restaurnt.Name</h5>
                            <p class="card-text">
                                <svg width="25" height="25" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M11.76 3.6a3 3 0 0 1 3 3v.6h-6v-.6a3 3 0 0 1 3-3Zm4.2 3.6v-.6a4.2 4.2 0 1 0-8.4 0v.6h-4.2v12a2.4 2.4 0 0 0 2.4 2.4h12a2.4 2.4 0 0 0 2.4-2.4v-12h-4.2ZM4.56 8.4h14.4v10.8a1.2 1.2 0 0 1-1.2 1.2h-12a1.2 1.2 0 0 1-1.2-1.2V8.4Z"></path>
                                </svg>
                                <span>Минимум 10лв.</span>
                            </p>
                            <p class="card-text" style="text-decoration: none">

                                <svg width="25" height="25" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 4.75a7.25 7.25 0 1 0 0 14.5 7.25 7.25 0 1 0 0-14.5z"></path>
                                    <path d="M12 8v4l2 2"></path>
                                </svg>
                                30-40 мин.

                                <svg width="32" height="32" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M6.72 7.32a.6.6 0 0 1 .6-.6h1.8a.6.6 0 1 1 0 1.2v.6h4.968l.463-1.39a.6.6 0 0 1 .569-.41h1.2a.6.6 0 1 1 0 1.2h-.768l-.374 1.122.969 1.548a3.6 3.6 0 1 1-1.018.636l-.61-.975-2.49 3.987a.602.602 0 0 1-.51.282H9.07a3.6 3.6 0 1 1-2.178-3.93L7.92 8.948V7.92h-.6a.6.6 0 0 1-.6-.6Zm1.8 2.931-.61.977c.6.533 1.02 1.265 1.16 2.092h1.367L8.52 10.25Zm3 2.537 1.917-3.068H9.602l1.918 3.068Zm-3.676.532a2.396 2.396 0 0 0-.584-1.053l-.658 1.053h1.242Zm-1.6-1.69a2.4 2.4 0 1 0 1.6 2.89H5.52a.6.6 0 0 1-.51-.918l1.233-1.972Zm9.536.636a2.4 2.4 0 1 0 1.017-.636l1.232 1.972a.598.598 0 0 1-.191.826.599.599 0 0 1-.827-.19l-1.231-1.97v-.002Z"></path>
                                </svg>
                                3 лв.

                            </p>

                        </div>
                    </div>

                </div>

            </div>
        </a>

  
    }
</div>



